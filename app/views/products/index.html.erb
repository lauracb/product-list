<div class="container">
  <div class="row justify-center">
  <div class="col-2"></div>
  <div class="col-8">
    <h1 class="mt-4 mb-3">Productos</h1>
    <div class="text-right">
      <%= link_to "Nuevo Producto", new_product_path, class:"btn btn-primary btn-right" %>
    </div>
    <br>

    <table class="table table-hover">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Categorías</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product|%>
      <tr>
        <td><%= product.name%></td>
        <td><%= product.price%></td>
        <td>
          <% product.categories.each do |category|%>
            <%= category.name%>,
          <% end %>
        </td>
        <td>
          <%= link_to "Editar", edit_product_path(product) %>
          <%= link_to "Eliminar", product, method: :delete, data: { confirm: "¿Estás seguro de eliminar este producto?" } %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <div class="col-2"></div>
</div>
